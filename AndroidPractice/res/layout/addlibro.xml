<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            style="@style/stile_layouts"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/textView1"
                style="@style/stile_textviews_sin"
                android:text="AÃ±adir Libro"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout01"
            style="@style/stile_layouts_add"
            android:layout_below="@+id/linearLayout1" >

            <LinearLayout
                android:id="@+id/LinearLayout04"
                style="@style/stile_layouts"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/TextView01"
                    style="@style/stile_textviews"
                    android:text="Libro" />

                <EditText
                    android:id="@+id/editText_libro"
                    style="@style/stile_edittext"
                    android:layout_weight="1"
                    android:ems="10" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout02"
            style="@style/stile_layouts_add"
            android:layout_below="@+id/LinearLayout01" >

            <TextView
                android:id="@+id/textView2"
                style="@style/stile_textviews"
                android:text="Nom. Artista" />

            <EditText
                android:id="@+id/editText_Nom_Art"
                style="@style/stile_edittext"
                android:ems="10" >

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout03"
            style="@style/stile_layouts_add"
            android:layout_below="@+id/LinearLayout02" >

            <TextView
                android:id="@+id/textView3"
                style="@style/stile_textviews"
                android:text="Genero" />

            <EditText
                android:id="@+id/editText_genero"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            style="@style/stile_layouts_add"
            android:layout_below="@+id/LinearLayout03" >

            <TextView
                android:id="@+id/textView2"
                style="@style/stile_textviews"
                android:text="Editorial" />

            <EditText
                android:id="@+id/editText_editorial"
                style="@style/stile_edittext"
                android:ems="10" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            style="@style/stile_layouts_add"
            android:layout_below="@+id/linearLayout2" >

            <TextView
                android:id="@+id/textView2"
                style="@style/stile_textviews"
                android:text="Num. Hojas" />

            <EditText
                android:id="@+id/editText_hojas"
                style="@style/stile_edittext"
                android:ems="10" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linearLayout3"
            android:gravity="center" >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar" android:onClick="guardar"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>